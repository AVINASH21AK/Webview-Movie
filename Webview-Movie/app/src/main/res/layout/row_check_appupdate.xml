<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_blackShade">

    <android.support.v7.widget.CardView
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/cardview_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:paddingLeft="@dimen/size_25"
            android:paddingRight="@dimen/size_25"

            >

          <TextView
              android:id="@+id/tvTitleDialog"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_10"
              android:layout_centerHorizontal="true"

              android:text="@string/app_name"
              android:textSize="@dimen/size_15"
              android:textColor="@color/black" />

            <TextView
              android:id="@+id/tvTxt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleDialog"
              android:layout_marginTop="@dimen/size_10"

              android:text="Are you sure, you want to logout"
              android:textSize="@dimen/size_14"
              android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_below="@+id/tvTxt"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/size_10">

                <TextView
                    android:id="@+id/tvNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="No"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/black"
                    android:padding="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"/>

                <TextView
                    android:id="@+id/tvYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10"
                    android:text="YES"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/black" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>